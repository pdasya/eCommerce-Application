{
  "name": "eCommerce-Application",
  "version": "1.0.0",
  "description": "Final task for RSSchool",
  "main": "index.tsx",
  "scripts": {
    "start": "webpack serve --open",
    "dev": "webpack --node-env=development",
    "prod": "webpack --node-env=production",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "ci:lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "ci:format": "prettier --check .",
    "prepare": "husky",
    "pre-push": "validate-branch-name",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint"
    ],
    "*": [
      "prettier --check"
    ]
  },
  "validate-branch-name": {
    "pattern": "^(master|main|develop|sprint-\\d{1,2}){1}$|^(RSS-ECOMM-\\d{1,2}_\\d{2,4}|CUSTOM-ECOMM-\\d{1,4})-([a-z]{2,}([A-Z]([a-z]+)){0,})$",
    "errorMsg": "Invalid branch name."
  },
  "author": "ViP",
  "license": "ISC",
  "keywords": [],
  "devDependencies": {
    "@cspell/dict-ru_ru": "^2.2.1",
    "@cspell/eslint-plugin": "^8.7.0",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/material": "^5.15.15",
    "@shopify/eslint-plugin": "^44.0.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "5.1.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unicorn": "^52.0.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mini-css-extract-plugin": "^2.9.0",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "prettier-plugin-multiline-arrays": "^3.0.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sass-loader": "^14.2.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "typescript-plugin-css-modules": "^5.1.0",
    "validate-branch-name": "^1.3.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "browserslist": [
    "defaults",
    "not ie < 11",
    "last 2 versions",
    "> 1%",
    "iOS 7",
    "last 3 iOS versions"
  ]
}
